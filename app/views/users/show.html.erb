<div>
  <div class="wrapper__profile">
    <div class="profile">
      <div class="avatar">
        <% if current_user.avatar.attached? %> 
		<%= image_tag        current_user.avatar, alt: "avatar", class: "img_profile" %> 
		<% else %>
        <img class="img_profile" src="https://t3.ftcdn.net/jpg/03/46/83/96/360_F_346839683_6nAPzbhpSkIpb8pmAwufkC7c5eD7wYws.jpg">
		 <% end %>
      </div>
      <div class="name">
        <%= current_user.first_name %> <%= current_user.last_name %>
      </div>
			<%= button_to "Modifier profil", edit_user_registration_path(current_user.id), method: "get", class:'btn btn__secondary mt-2 item_to_cart' %>
    </div>
    <div class="orders__wrapper">
      <h3 class="orders__title">Commandes</h3>
	  <div class="orders">
	  <% current_user.orders.each do |order|%>
	   <div class="profile__order order__card">
	   	<div class=" order__img">
		    <% if order.items[0].item_image.attached? %> 
        <%= image_tag order.items[0].item_image,height:50, alt: "cat"%>
		<% else %>
        <%= image_tag order.items[0].image_url , alt: "cat" %>
		 <% end %>
		   
		   </div>
		<div class=" order__text">
		<h5 class="order__card__title">Commande#<%= order.id%></h5>
		<%= order.total %>â‚¬
		<%= button_to "Voir", order_path(order.id), method:'get', class:'btn btn__primary' %>
		</div>
	   </div>
	  <%end%>
	  
	</div>
     
    </div>
  </div>
